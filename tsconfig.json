{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": [
			"esnext",
			"dom"
		],
		"skipLibCheck": true,
		"types": [
			"element-plus/global",
			"unplugin-icons/types/vue",
		],
		"paths": {
			"@/*": [
				"src/*"
			],
			"~/*": [
				"./*"
			],
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/*.d.ts",
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}